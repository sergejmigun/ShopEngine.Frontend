@model ShopEngine.Frontend.Models.Layout.HeaderViewModel
<!-- Header-->
<!-- Remove "navbar-sticky" class to make navigation bar scrollable with the page.-->
<div class="header-links">
    @if (Model.Phones != null && Model.Phones.Any())
    {
        <div class="d-flex">
            <ul class="header__nav-list">
                <li>
                    <i class="fas fa-phone-alt"></i>
                </li>
                @foreach (var phone in Model.Phones)
                {
                    <li>
                        <a href="tel:@phone" class="phones-item stationary"><span>@phone</span></a>
                    </li>
                }
            </ul>
        </div>
    }

    <div class="d-flex flex-full">
        <ul class="header__nav-list">
            @foreach (var link in Model.HeaderLinks)
            {
                <li>
                    <a href="@Url.Action(link.Link)">@link.Text</a>
                </li>
            }
        </ul>
    </div>
</div>
<header class="site-header navbar-sticky">
    <div class="navbar">
        <!-- Topbar-->
        <div class="topbar d-flex justify-content-between">
            <!-- Logo-->
            <div class="site-branding d-flex"><a class="site-logo align-self-center" href="index.html"><img src="@Url.Content(Model.LogoPath)" alt="@Model.LogoAlt"></a></div>
            <!-- Search / Categories-->
            <div class="search-box-wrap d-flex">
                <div class="d-flex" style="position: relative;">
                    <div>
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown"><i class="icon-menu text-lg"></i>&nbsp;Categories</button>
                        <div class="dropdown-menu" id="categoriesMenu">

                        </div>
                    </div>
                </div>
                <div class="search-box-inner align-self-center" id="searchBarWrapper">
                    
                </div>
            </div>
            <!-- Toolbar-->
            <div id="layoutToolbar">
            </div>
            <!-- Mobile Menu-->
            <div class="mobile-menu">
                <!-- Search Box-->
                <div class="mobile-search">
                    <form class="input-group" method="get">
                        <span class="input-group-btn">
                            <button type="submit"><i class="icon-search"></i></button>
                        </span>
                        <input class="form-control" type="search" placeholder="Search site">
                    </form>
                </div>
                <!-- Toolbar-->
                <div class="toolbar">
                    <div class="toolbar-item">
                        <a href="#">
                            <div><i class="flag-icon"><img src="img/flags/@(Model.CurrentLanguage.Code).png" alt="@Model.CurrentLanguage.Title"></i><span class="text-label">@Model.CurrentLanguage.Code / @Model.CurrentCurrency.Code</span></div>
                        </a>
                        <ul class="toolbar-dropdown lang-dropdown w-100">
                            <li class="px-3 pt-1 pb-2">
                                <select class="form-control form-control-sm">
                                    @foreach (var currency in Model.Currencies)
                                    {
                                        <option value="@currency.Code">@currency.Sign @currency.Title</option>
                                    }
                                </select>
                            </li>
                            @foreach (var language in Model.Languages)
                            {
                                <li><a href="#"><i class="flag-icon"><img src="img/flags/@(language.Code).png" alt="@language.Title"></i>&nbsp;@language.Title</a></li>
                            }
                        </ul>
                    </div>
                    <div class="toolbar-item">
                        <a href="product-comparison.html">
                            <div><span class="compare-icon"><i class="icon-repeat"></i><span class="count-label">@Model.ComparedItemsCount</span></span><span class="text-label">Compare</span></div>
                        </a>
                    </div>
                    <div class="toolbar-item">
                        <a href="account-login.html">
                            <div><i class="icon-user"></i><span class="text-label">Sign In / Up</span></div>
                        </a>
                    </div>
                </div>
                @Html.Partial("MobileMenu", Model.Menu)
            </div>
        </div>
